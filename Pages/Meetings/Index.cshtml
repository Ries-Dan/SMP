@page
@model SMP.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                @Html.DisplayNameFor(model => model.Meeting[0].Date)
            </a>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Conducting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].OpeningHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].SacramentHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].RestHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].ClosingHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Speaker3)
            </th>
            <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.TopicSort">
                @Html.DisplayNameFor(model => model.Meeting[0].Topic)
            </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meeting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conducting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
